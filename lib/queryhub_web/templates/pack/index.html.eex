<h2>Listing Packs</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for pack <- @packs do %>
    <tr>
      <td><%= pack.name %></td>
      <td><%= pack.description %></td>

      <td class="text-right">
        <span><%= link "Show", to: pack_path(@conn, :show, pack), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Edit", to: pack_path(@conn, :edit, pack), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: pack_path(@conn, :delete, pack), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Pack", to: pack_path(@conn, :new) %></span>
